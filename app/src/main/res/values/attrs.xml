<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ColorChangeButton 的自定义属性 -->
    <declare-styleable name="ColorChangeButton">
        <attr name="normalBackgroundColor" format="color" />
        <attr name="selectedBackgroundColor" format="color" />
        <attr name="normalTextColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="backgroundStrokeColor" format="color" />
        <attr name="backgroundStrokeWidth" format="dimension" />
        <attr name="backgroundTopLeftCorner" format="dimension" />
        <attr name="backgroundTopRightCorner" format="dimension" />
        <attr name="backgroundBottomLeftCorner" format="dimension" />
        <attr name="backgroundBottomRightCorner" format="dimension" />
    </declare-styleable>

    <!-- PagerSlidingTabStrip 的自定义属性 -->
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
        <attr name="pstsTabBackground" format="reference" />
    </declare-styleable>

</resources>