<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar：左边App名，右边平/片假名切换 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/kana_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <!-- 左侧 App 名称，Toolbar内部默认左对齐 -->
        <TextView
            android:id="@+id/kana_main_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 右侧 SwitchView，推到最右边 -->
        <com.sjshb57.kana.view.SwitchView
            android:id="@+id/kana_main_switch_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Tab指示器 -->
    <com.sjshb57.kana.view.PagerSlidingTabStrip
        android:id="@+id/kana_main_pager_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        app:pstsIndicatorColor="#ff5e5e"
        app:pstsIndicatorHeight="3dp"
        app:pstsUnderlineColor="#E0E0E0"
        app:pstsUnderlineHeight="1dp"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsShouldExpand="true" />

    <!-- 内容 ViewPager -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/kana_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>